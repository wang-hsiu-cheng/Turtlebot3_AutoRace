
<launch>

    <!-- Launch your node -->
    <node name="odom" pkg="race" type="odom_node" output="screen">
        <!-- TODO-4 : load yaml file into the node -->
        <!-- Hint : rosparam, load, launch -->
        <rosparam file="$(find race)/config/odom_params.yaml" />
    </node>
    

    <!-- Static transform -->
    <node name="base_footprint_to_imu" pkg="tf2_ros" type="static_transform_publisher" args="0 0 0 0 0 0 odom base_footprint"/>

    <!-- RViz -->
    <node name="odom_rviz" type="rviz" pkg="rviz" args="-d $(find race)/rviz/sim.rviz" />

</launch>
